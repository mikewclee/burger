<h1>Eat-Da-Burger!</h1>
<div class="row d-flex">
    <div class="col">
        <h2>Burgers Ready To Eat!</h2>

        <ul>
            {{#each burger}}
            {{#unless devoured}}
            <li>
                {{burger_name}}
                <button class="eatBtn btn btn-danger" id="{{id}}">Devour It!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col">
        <h2>Burgers Devoured!</h2>

        <ul>
            {{#each burger}}
            {{#if devoured}}
            <li>
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div>
    <h2>Add Your Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <input type="text" class="form-control" id="burg" name="name" placeholder="Burger Name">
        </div>

        <button type="submit" class="btn btn-primary">Add Burger</button>
    </form>
</div>